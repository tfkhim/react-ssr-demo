{
  "name": "react-ssr-demo",
  "version": "1.0.0",
  "description": "Demo project for React server side rendering",
  "private": true,
  "scripts": {
    "dev": "npx concurrently -k 'npm:server:watch' 'npm:client:serve'",
    "server:watch": "npx ts-node-dev --project src/server/tsconfig.json src/server/app.ts",
    "server:build": "tsc --build src/server/tsconfig.json",
    "client:serve": "npx webpack serve --env dev",
    "client:build": "npx webpack build"
  },
  "author": "Thomas Himmelstoss",
  "license": "MIT",
  "engines": {
    "node": "16.x.x",
    "npm": "7.x.x"
  },
  "dependencies": {
    "express": "4.17.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/express": "4.17.13",
    "@types/node": "16.7.1",
    "@types/react": "17.0.19",
    "@types/react-dom": "17.0.9",
    "concurrently": "6.2.1",
    "html-webpack-plugin": "5.3.2",
    "node-dev": "7.0.0",
    "ts-loader": "9.2.5",
    "ts-node-dev" : "1.1.8",
    "typescript": "4.3.5",
    "webpack": "5.51.1",
    "webpack-cli": "4.8.0",
    "webpack-dev-server": "4.0.0",
    "webpack-merge": "5.8.0"
  }
}
